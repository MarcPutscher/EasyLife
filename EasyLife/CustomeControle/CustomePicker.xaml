<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyLife.CustomeControle.CustomePicker">

    <StackLayout Padding="7">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
        </StackLayout.GestureRecognizers>
        <Label x:Name="Item" VerticalOptions="Center" TextColor="Black" HorizontalOptions="Center" FontSize="Medium"/>
        <Label x:Name="Holder" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" Opacity="0.8"/>
    </StackLayout>
</ContentView>