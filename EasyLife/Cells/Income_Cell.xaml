                            <Label VerticalOptions="Center"
                            FontSize="Small"
                            Text="Auftrags-ID = "
                            TextColor="Black"/>
                            <Label VerticalOptions="Center"
                            FontSize="Small"
                            Text="{Binding Auftrags_id}"
