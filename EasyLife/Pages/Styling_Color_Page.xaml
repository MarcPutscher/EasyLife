                            <Frame HeightRequest="30" WidthRequest="30" CornerRadius="50" BorderColor="White" BackgroundColor="{Binding Grouping_Textcolor}" VerticalOptions="Center"/>
                            <StackLayout Spacing="0">
                                <Label Text="Textfarbe der Gruppennamen:" TextColor="White" FontSize="Medium" HorizontalTextAlignment="Start"/>
                                <Picker SelectedItem="{Binding Grouping_Textcolor_String}" ItemsSource="{Binding Color_List}" TextColor="White" Title="Farbe auswählen" TitleColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Fill" VerticalOptions="Center">
                                    <Picker.Behaviors>
                                        <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding Grouping_Textcolor_Changed_Command}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </StackLayout>
                        </StackLayout>
                        <Label Text="Ladekreis" TextDecorations="Underline" TextColor="White" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,20,0,5"/>
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Frame HeightRequest="30" WidthRequest="30" CornerRadius="50" BorderColor="White" BackgroundColor="{Binding Refresh_Color}" VerticalOptions="Center"/>
                            <StackLayout Spacing="0">
                                <Label Text="Farbe des Ladekreises:" TextColor="White" FontSize="Medium" HorizontalTextAlignment="Start"/>
                                <Picker SelectedItem="{Binding Refresh_Color_String}" ItemsSource="{Binding Color_List}" TextColor="White" Title="Farbe auswählen" TitleColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Fill" VerticalOptions="Center">
                                    <Picker.Behaviors>
                                        <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding Refresh_Color_Changed_Command}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </StackLayout>
                        </StackLayout>
                        <Label Text="Menu" TextDecorations="Underline" TextColor="White" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,20,0,5"/>
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Frame HeightRequest="30" WidthRequest="30" CornerRadius="50" BorderColor="White" BackgroundColor="{Binding Flyout_Backgroundcolor}" VerticalOptions="Center"/>
                            <StackLayout Spacing="0">
                                <Label Text="Hintergrundfarbe des Menu:" TextColor="White" FontSize="Medium" HorizontalTextAlignment="Start"/>
                                <Picker SelectedItem="{Binding Flyout_Backgroundcolor_String}" ItemsSource="{Binding Color_List}" TextColor="White" Title="Farbe auswählen" TitleColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Fill" VerticalOptions="Center">
                                    <Picker.Behaviors>
                                        <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding Flyout_Backgroundcolor_Changed_Command}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Frame HeightRequest="30" WidthRequest="30" CornerRadius="50" BorderColor="White" BackgroundColor="{Binding Flyout_Selectcolor}" VerticalOptions="Center"/>
                            <StackLayout Spacing="0">
                                <Label Text="Ausgewählte Seitenfarbe im Menu:" TextColor="White" FontSize="Medium" HorizontalTextAlignment="Start"/>
                                <Picker SelectedItem="{Binding Flyout_Selectcolor_String}" ItemsSource="{Binding Color_List}" TextColor="White" Title="Farbe auswählen" TitleColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Fill" VerticalOptions="Center">
                                    <Picker.Behaviors>
                                        <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding Flyout_Selectcolor_Changed_Command}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Frame HeightRequest="30" WidthRequest="30" CornerRadius="50" BorderColor="White" BackgroundColor="{Binding Flyout_Textcolor}" VerticalOptions="Center"/>
                            <StackLayout Spacing="0">
                                <Label Text="Textfarbe des Menu:" TextColor="White" FontSize="Medium" HorizontalTextAlignment="Start"/>
                                <Picker SelectedItem="{Binding Flyout_Textcolor_String}" ItemsSource="{Binding Color_List}" TextColor="White" Title="Farbe auswählen" TitleColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Fill" VerticalOptions="Center">
                                    <Picker.Behaviors>
                                        <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding Flyout_Textcolor_Changed_Command}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="20">
                            <Frame HeightRequest="30" WidthRequest="30" CornerRadius="50" BorderColor="White" BackgroundColor="{Binding Flyout_Iconcolor}" VerticalOptions="Center"/>
                            <StackLayout Spacing="0">
                                <Label Text="SeitenIcon im Menu:" TextColor="White" FontSize="Medium" HorizontalTextAlignment="Start"/>
                                <Picker SelectedItem="{Binding Flyout_Iconcolor_String}" ItemsSource="{Binding Color_List}" TextColor="White" Title="Farbe auswählen" TitleColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Fill" VerticalOptions="Center">
                                    <Picker.Behaviors>
                                        <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding Flyout_Iconcolor_Changed_Command}" />
                                    </Picker.Behaviors>
                                </Picker>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </Frame>
            <StackLayout Grid.Row="1">
                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center" Margin="10">
                    <Button Text="Anwenden" Command="{Binding Apply_Command}" HorizontalOptions="Center" CornerRadius="30" xct:ShadowEffect.Color="White" VerticalOptions="Center" BorderWidth="2" BorderColor="White" BackgroundColor="Gray" Padding="20"/>
                    <Button Text="Zurücksetzen" Command="{Binding Default_Command}" HorizontalOptions="Center" CornerRadius="30" xct:ShadowEffect.Color="White" VerticalOptions="Center" BorderWidth="2" BorderColor="White" BackgroundColor="Gray" Padding="20"/>
                </StackLayout>
                <Grid IsVisible="{Binding IsNotificater_Visibel}" IsEnabled="{Binding IsNotificater_Visibel}">
                    <Frame BackgroundColor="Gray" BorderColor="DarkGray" CornerRadius="30" HasShadow="True" HorizontalOptions="EndAndExpand" Padding="5">
                        <Label Text="{Binding Notificater_Text}" FontSize="Small" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="10,0,10,0"/>
                    </Frame>
                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>