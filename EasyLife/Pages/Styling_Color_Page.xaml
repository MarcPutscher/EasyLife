<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pagemodels="clr-namespace:EasyLife.PageModels" 
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
             xmlns:cells="clr-namespace:EasyLife.Cells" 
             xmlns:control="http://xamarin.com/schemas/2014/forms" xmlns:colorpicker21="https://github.com/avaloniaui"
             x:Class="EasyLife.Pages.Styling_Color_Page"
             BackgroundColor="Black"
             Title="Benutzerdefinierte Farben">

    <ContentPage.BindingContext>
        <pagemodels:Styling_Color_PageModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior
                EventName="Appearing"
                Command="{Binding View_IsAppering_Command}" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <cells:Template_Selector_for_Styling x:Key="templateSelector"></cells:Template_Selector_for_Styling>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto">
            <Frame Grid.Row="0" BorderColor="White" Margin="1,1,1,1" BackgroundColor="Transparent" Padding="0" CornerRadius="30">
                <Grid RowDefinitions="*,Auto">
                    <StackLayout Grid.Row="0" BackgroundColor="Transparent">
                        <StackLayout BackgroundColor="Transparent" Padding="20">
                            <control:CarouselView x:Name="carouselView" ItemTemplate="{StaticResource templateSelector}" CurrentItemChanged="carouselView_CurrentItemChanged"/>
                        </StackLayout>              
                    </StackLayout>
                    <StackLayout Grid.Row="1" BackgroundColor="Transparent">
                        <Line BackgroundColor="White" HeightRequest="1" />
                        <colorpicker:ColorWheel x:Name="ColorWheel1" IsEnabled="{Binding ColorWheel_State}" WheelBackgroundColor="{Binding SelectedColor}" SelectedColorChanged="ColorWheel1_SelectedColorChanged" VerticalOptions="Center" HorizontalOptions="Center" SelectedColor="{Binding SelectedColor}" HeightRequest="300">
                        </colorpicker:ColorWheel>
                    </StackLayout>
                </Grid>
            </Frame>
            <StackLayout Grid.Row="1">
                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center" Margin="10">
                    <Button Text="Zurücksetzen" Command="{Binding Default_Command}" HorizontalOptions="Center" CornerRadius="30" xct:ShadowEffect.Color="White" VerticalOptions="Center" BorderWidth="2" BorderColor="White" BackgroundColor="Gray" Padding="20"/>
                    <Button Text="Speichern" Command="{Binding Save_Command}" HorizontalOptions="Center" CornerRadius="30" xct:ShadowEffect.Color="White" VerticalOptions="Center" BorderWidth="2" BorderColor="White" BackgroundColor="Gray" Padding="20"/>
                    <Button Text="Laden" Command="{Binding Load_Command}" HorizontalOptions="Center" CornerRadius="30" xct:ShadowEffect.Color="White" VerticalOptions="Center" BorderWidth="2" BorderColor="White" BackgroundColor="Gray" Padding="20"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>