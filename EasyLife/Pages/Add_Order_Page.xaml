    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EasyLife.Pages.Add_Order_Page"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    BackgroundColor ="{DynamicResource Hintergrund_Hinzufügen}"
    xmlns:pagemodels="clr-namespace:EasyLife.PageModels"
    x:DataType="pagemodels:Add_Order_PageModel"
    Shell.PresentationMode="Modal"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <pagemodels:Add_Order_PageModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior
