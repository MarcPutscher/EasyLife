                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
                                                    MaxLines="1"
                                                    Padding="0"
                                                    Text="Anzahl der gelöschten Aufträge :" 
                                                    TextColor="White"
                                                    FontAttributes="None"/>
                                    <Label Text="{Binding Amount_of_deleted_Order}" TextColor="Blue" FontSize="Medium" FontAttributes="None" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
