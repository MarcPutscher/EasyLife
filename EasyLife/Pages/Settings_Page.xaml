             xmlns:xct="http://xamarin.com/schemas/2020/toolkit" 
             xmlns:customrenderer="clr-namespace:EasyLife.CustomRenderer"
             x:DataType="pagemodels:Settings_PageModel"
             BackgroundColor="Black"
             Title="Einstellungen">
    
