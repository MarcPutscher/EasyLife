                                    <customrenderer:AutoFontSizeLabel 
                                                    AutoSizeMaxTextSize="20"
                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
                                                    MaxLines="1"
                                                    Padding="0"
                                                    Text="Anzahl der unbenutzten Zwecke :" 
                                                    TextColor="White"
                                                    FontAttributes="None"/>
                                    <Label Text="{Binding Amount_of_unuse_Reason}" TextColor="Blue" FontSize="Medium" FontAttributes="None" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
                                </Grid>

                                
                                <Label Text="Benachrichtigungen :" TextDecorations="Underline" TextColor="Green" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,10,0,1"/>
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <customrenderer:AutoFontSizeLabel 
                                                    AutoSizeMaxTextSize="20"
                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
                                                    MaxLines="1"
                                                    Padding="0"
                                                    Text="Anzahl der erstellten Benachrichtigungen :" 
                                                    TextColor="White"
                                                    FontAttributes="None"/>
                                    <Label Text="{Binding Amount_of_generated_Notification}" TextColor="Blue" FontSize="Medium" FontAttributes="None" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
                                </Grid>

                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <customrenderer:AutoFontSizeLabel 
                                                    AutoSizeMaxTextSize="20"
                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
                                                    MaxLines="1"
                                                    Padding="0"
                                                    Text="Anzahl der gelöschten Benachrichtigungen :" 
                                                    TextColor="White"
                                                    FontAttributes="None"/>
                                    <Label Text="{Binding Amount_of_deleted_Notification}" TextColor="Blue" FontSize="Medium" FontAttributes="None" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
                                </Grid>

                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <customrenderer:AutoFontSizeLabel 
                                                    AutoSizeMaxTextSize="20"
                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
                                                    MaxLines="1"
                                                    Padding="0"
                                                    Text="Anzahl der kommenden Benachrichtigungen :" 
                                                    TextColor="White"
                                                    FontAttributes="None"/>
                                    <Label Text="{Binding Amount_of_use_Notification}" TextColor="Blue" FontSize="Medium" FontAttributes="None" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
                                </Grid>

                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <customrenderer:AutoFontSizeLabel 
                                                    AutoSizeMaxTextSize="20"
                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
                                                    MaxLines="1"
                                                    Padding="0"
                                                    Text="Anzahl der eingetretenen Benachrichtigungen :" 
                                                    TextColor="White"
                                                    FontAttributes="None"/>
                                    <Label Text="{Binding Amount_of_unuse_Notification}" TextColor="Blue" FontSize="Medium" FontAttributes="None" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
                                </Grid>

                                
                                <Label Text="Budgets :" TextDecorations="Underline" TextColor="Green" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,10,0,1"/>
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <customrenderer:AutoFontSizeLabel 
                                                    AutoSizeMaxTextSize="20"
                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
