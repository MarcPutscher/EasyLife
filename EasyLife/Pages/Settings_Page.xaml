                                                    AutoSizeMinTextSize="8"
                                                    AutoSizeStepGranularity="1"
                                                    HeightRequest="30"
                                                    HorizontalTextAlignment="Start"
                                                    VerticalTextAlignment="Center"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Fill"
                                                    Grid.Column="0"                                
